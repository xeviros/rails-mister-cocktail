<div class="container">
<h1> <%= @cocktail.name  %> </h1>

<h2><%=@cocktail.name%> details: </h2>

<%  @cocktail.doses.each do |dose| %>
  <p> - <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %> </p>

<% end %>






<p>
  <%= link_to '<i class="fas fa-list-ul"></i>'.html_safe, cocktails_path %>
  <%= link_to "Go back to all Cocktails!", cocktails_path %>
</p>

<p>
  <%= link_to '<i class="fas fa-plus"></i>'.html_safe, new_cocktail_dose_path(@cocktail) %>
  <%= link_to "Create a Dose", new_cocktail_dose_path(@cocktail) %>
</p>

</div>
