
<p>
  <span id="banner-typed-text"></span>
</p>

<div class="container-cards">

  <div class="row-cards">
    <h1 class="h1index">All Cocktails üç∏</h1>
    <% @cocktails.each do |cocktail|%>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>





          <% if cocktail.photo.presence %>
            <div class="card"
                  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                     url('<%= cl_image_path cocktail.photo %>')">
              <div class="card-description">
              <h2> <%= cocktail.name  %> </h2>
              </div>
            </div>
          <% else %>

            <div class="card"
                style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                   url('<%= image_path('san_francisco.jpg') %>')">
              <div class="card-description">
              <h2> <%= cocktail.name  %> </h2>
              </div>
            </div>
          <% end %>









        <% end %>
      </div>
    <% end %>
  </div>
</div>


